{
    "manifest_version": 2,
    "name": "eBay Seller Tools",
    "description": "Adds Functionality to eBay for Sellers",
    "version": "1.0",
    "icons": {
        "16": "/icons/16x16.png",
        "48": "/icons/48x48.png",
        "128": "/icons/128x128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "/icons/16x16.png",
            "48": "/icons/48x48.png",
            "128": "/icons/128x128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.ebay.com/sch/*"],
            "js": ["/js/content.js"]
        }
    ]
}